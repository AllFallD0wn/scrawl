<a href="{{@blog.url}}" class="blog-title-background">
  <h1>{{@blog.title}}</h1>
</a>
<a href="{{url}}" class="post-title-background">
  <h2>{{title}}</h2>
</a>
<div class="authorship">
  {{#author}}
    <div class="author-pic" style="background-image:url({{image}})"></div>
    <div class="name-date">
      <a class="author-name" url="{{url}}">
        {{name}}
      </a>
      {{/author}}
      <date class="post-date">
        {{date format="MMM DD YYYY"}}
      </date>
    </div>
</div>
